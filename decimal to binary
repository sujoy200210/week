#include <iostream>
using namespace std;
class revnum
{
	private:
		int i=1,j=n,n,revnum=n,revnum=0;
	public:
			int deci()
			{
				cout<<"decimal number";
				cin>>n;
			}
			int bin()
			{
				for(j=n;j>0;j=j/2)
				{
					revnum=revnum+(n%2)*i;
					i=i*10;
					n=n/2;
				}
				cout<<("revnum=",revnum,T4Tutorials_binary);
			}
		};
		int main()
		{
			decimal A;
			A.deci();
			A.bin();
		}
